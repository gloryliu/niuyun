<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.niuyun.hire.view.TitleBar
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_view"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_store"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_about" />

        <TextView
            android:id="@+id/iv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_store"
            android:layout_centerHorizontal="true"
            android:text="玩具购" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_store_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="版本号V1.0"
            android:textColor="@color/color_0880BD" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rl_base"
        android:layout_marginBottom="20dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="联系邮箱:xxxx@163.com"
            android:textColor="@color/color_0880BD" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="联系电话:18888888888"
            android:textColor="@color/color_0880BD" />


        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="联系电话:328837476"
            android:textColor="@color/color_0880BD" />

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="北京XX有限公司"
            android:textColor="@color/color_0880BD" />


    </RelativeLayout>
</RelativeLayout>