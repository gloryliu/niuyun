<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp">

        <TextView
            style="@style/perfect_enterperfect_item_text_style"
            android:text="个人信息" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:paddingBottom="13dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="13dp">

        <TextView
            style="@style/perfect_enterperfect_item_text_style"
            android:layout_centerVertical="true"
            android:text="头像" />

        <com.niuyun.hire.view.CircularImageView
            android:id="@+id/iv_header"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/iv_more"
            android:src="@mipmap/ic_default_head" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right" />
    </RelativeLayout>

    <View style="@style/common_divider_f0f0f0" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:paddingBottom="13dp"
        android:paddingLeft="16dp"
        android:paddingRight="31dp"
        android:paddingTop="13dp">

        <TextView
            android:id="@+id/tv_name_title"
            style="@style/perfect_enterperfect_item_text_style"
            android:layout_centerVertical="true"
            android:text="姓名" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_name_title"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入"
            android:textColor="@color/color_303030"
            android:textSize="12sp" />

    </RelativeLayout>

    <View style="@style/common_divider_f0f0f0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:paddingBottom="13dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="13dp">

        <TextView
            style="@style/perfect_enterperfect_item_text_style"
            android:layout_centerVertical="true"
            android:text="职位" />

        <TextView
            android:id="@+id/tv_position"
            style="@style/textview_999999_13_style"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_position_more"
            android:text="选择" />

        <ImageView
            android:id="@+id/iv_position_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right" />
    </RelativeLayout>

    <View style="@style/common_divider_f0f0f0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:paddingBottom="13dp"
        android:paddingLeft="16dp"
        android:paddingRight="31dp"
        android:paddingTop="13dp">

        <TextView
            android:id="@+id/tv_phone_title"
            style="@style/perfect_enterperfect_item_text_style"
            android:layout_centerVertical="true"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_phone_title"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入"
            android:inputType="number"
            android:textColor="@color/color_303030"
            android:textSize="12sp" />

    </RelativeLayout>

    <View style="@style/common_divider_f0f0f0" />
</LinearLayout>