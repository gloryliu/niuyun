        <!-- 推荐质量，标清、高清、超清 -->
        <RadioGroup
            android:id="@+id/rg_video_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_video_quality_sd"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_bg"
                android:button="@null"
                android:gravity="center"
                android:text="标清"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical" />

            <RadioButton
                android:id="@+id/rb_video_quality_hd"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_bg"
                android:button="@null"
                android:gravity="center"
                android:text="高清"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical" />

            <RadioButton
                android:id="@+id/rb_video_quality_super"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_bg"
                android:button="@null"
                android:gravity="center"
                android:text="超清"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical" />

            <RadioButton
                android:id="@+id/rb_video_quality_custom"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_bg"
                android:button="@null"
                android:gravity="center"
                android:text="自定义"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_resolution"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="分辨率:"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rg_video_resolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_video_resolution_360p"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="360p"
                        android:textColor="@color/text_radio_color"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_video_resolution_540p"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="540p"
                        android:textColor="@color/text_radio_color"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_video_resolution_720p"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="720p"
                        android:textColor="@color/text_radio_color"
                        android:textSize="16sp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_recommend_resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bite_rate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/ll_resolution"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="码率(kbps):"
                    android:textSize="16sp" />

                <!--<RadioGroup-->
                <!--android:id="@+id/rg_video_bitrate"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="16dp"-->
                <!--android:orientation="horizontal">-->
                <!--<RadioButton-->
                <!--android:id="@+id/rb_video_bitrate_low"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:button="@null"-->
                <!--android:text="600"-->
                <!--android:textColor="@color/text_radio_color"/>-->
                <!--<RadioButton-->
                <!--android:id="@+id/rb_video_bitrate_middle"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:button="@null"-->
                <!--android:text="1800"-->
                <!--android:textColor="@color/text_radio_color"/>-->
                <!--<RadioButton-->
                <!--android:id="@+id/rb_video_bitrate_high"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:button="@null"-->
                <!--android:text="2400"-->
                <!--android:textColor="@color/text_radio_color"/>-->
                <!--</RadioGroup>-->

                <TextView
                    android:id="@+id/tv_recommend_bitrate"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_biterate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:hint="建议800-4800，默认1800"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorGray4"
                    android:textSize="16sp"
                    android:theme="@style/CustomEditText" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fps"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/ll_bite_rate"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="fps:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_fps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:hint="建议15-30，默认20"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorGray4"
                    android:textSize="16sp"
                    android:theme="@style/CustomEditText" />

                <TextView
                    android:id="@+id/tv_recommend_fps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gop"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/ll_fps"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="关键帧间隔:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_gop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:hint="建议1-10，默认3秒"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorGray4"
                    android:textSize="16sp"
                    android:theme="@style/CustomEditText" />

                <TextView
                    android:id="@+id/tv_recommend_gop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="visible" />
            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"/>-->

        </RelativeLayout>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:text="开始录制"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/h8" />

    </LinearLayout>

</RelativeLayout>