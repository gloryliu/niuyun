<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.niuyun.hire.view.CircularImageView
            android:id="@+id/iv_company"
            android:layout_width="41.5dp"
            android:layout_height="41.5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16.5dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_default" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:id="@+id/rl_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp">

                <TextView
                    android:id="@+id/tv_position_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UI设计师"
                    android:textColor="@color/color_171717"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_position_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="10:00"
                    android:textColor="@color/color_999999"
                    android:textSize="10.5sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_content1"
                android:layout_marginTop="9dp"
                android:text="万科地产|总监"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="9dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_company_name">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_message_count"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="我想找一份工作。。。"
                    android:textColor="@color/color_999999"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_message_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/bg_circle_red"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/color_ffffff"
                    android:textSize="10.5sp" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>