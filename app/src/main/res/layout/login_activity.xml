<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_login"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:padding="10dp"
            android:text="随便看看→"
            android:textColor="@color/color_baafafaf"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:src="@mipmap/ic_login_logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <com.niuyun.hire.view.CleanableEditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/rl_phone"
                    android:background="@drawable/bg_330e0e0e_solid1"
                    android:hint="请输入您的手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_929292"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="14sp" />


                <RelativeLayout
                    android:id="@+id/rl_phone"
                    android:layout_width="70dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/bg_3f272727_solid"
                        android:padding="14dp"
                        android:src="@mipmap/ic_phone" />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <RelativeLayout
                    android:id="@+id/rl_password"
                    android:layout_width="70dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/tv_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/bg_3f272727_solid"
                        android:padding="14dp"
                        android:src="@mipmap/ic_password" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/pass_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/rl_password"
                    android:background="@drawable/bg_330e0e0e_solid1"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:maxLength="26"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/color_929292"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="14sp" />
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="忘记密码?"
                android:textColor="@color/color_baffffff"
                android:textSize="12sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/login"
            style="@style/btn_blue_btn"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="30dp"
            android:enabled="true"
            android:textSize="15sp"
            android:text="登陆" />

        <Button
            android:id="@+id/regist"
            style="@style/btn_red_btn"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:enabled="true"
            android:textSize="15sp"
            android:text="注册"
            android:textColor="@color/color_ff0000" />


    </LinearLayout>

</LinearLayout>