<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.easefun.polyvsdk.rtmp.core.video.PolyvRTMPView
        android:id="@+id/polyv_rtmp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_delete" />

            <ImageView
                android:id="@+id/iv_change_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/tv_logoff"
                android:src="@mipmap/ic_camera_change" />

            <TextView
                android:id="@+id/tv_logoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_eee_round_corner_box"
                android:padding="3dp"
                android:text="超清"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/setting_tv_textsize" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_dcdcdc"
                android:padding="20dp"
                android:src="@mipmap/ic_add_live_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="添加封面"
                android:textColor="@color/color_ffffff"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_87000000"
            android:orientation="vertical"
            android:paddingBottom="13dp"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="给自己直播写个标题吧"
                android:textColor="@color/color_ffffff"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="限10字以内"
                android:imeOptions="flagNoFullscreen"
                android:inputType="text"
                android:maxLength="10"
                android:padding="@dimen/setting_paddingleft"
                android:textColor="@color/color_dcdcdc"
                android:textColorHint="@color/gray_main_d"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/color_87000000"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <EditText
                android:id="@+id/et_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="公司名称"
                android:imeOptions="flagNoFullscreen"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/color_dcdcdc"
                android:textColorHint="@color/gray_main_d"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/color_87000000"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <EditText
                android:id="@+id/et_host_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="主持人"
                android:imeOptions="flagNoFullscreen"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/color_dcdcdc"
                android:textColorHint="@color/gray_main_d"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/color_87000000"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="标签选择"
                android:textColor="@color/color_ffffff"
                android:textSize="14sp" />

            <com.niuyun.hire.view.AutoNextLineView
                android:id="@+id/an_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="最多可选择三个标签"
                android:textColor="@color/color_ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            style="@style/setting_textview"
            android:text="直播logo"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_et_height"
            android:background="@color/white_share"
            android:padding="@dimen/setting_paddingleft"
            android:visibility="gone">

            <com.niuyun.hire.ui.polyvLive.view.PolyvGrayImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/setting_iv_width"
                android:layout_height="@dimen/setting_iv_height"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/polyv_setting_iv_pressed"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            style="@style/setting_textview"
            android:text="推流模式"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_portrait"
            style="@style/setting_layout"
            android:visibility="gone">

            <TextView
                style="@style/setting_textview_s"
                android:text="竖屏模式"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_portrait"
                style="@style/setting_imageview"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            style="@style/setting_view"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_landscape"
            style="@style/setting_layout"
            android:visibility="gone">

            <TextView
                style="@style/setting_textview_s"
                android:text="横屏模式" />

            <ImageView
                android:id="@+id/iv_landscape"
                style="@style/setting_imageview" />
        </RelativeLayout>

        <TextView
            style="@style/setting_textview"
            android:text="推流清晰度"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_sc"
            style="@style/setting_layout"
            android:visibility="gone">

            <TextView
                style="@style/setting_textview_s"
                android:text="超清" />

            <ImageView
                android:id="@+id/iv_sc"
                style="@style/setting_imageview" />
        </RelativeLayout>

        <View
            style="@style/setting_view"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_hd"
            style="@style/setting_layout"
            android:visibility="gone">

            <TextView
                style="@style/setting_textview_s"
                android:text="高清" />

            <ImageView
                android:id="@+id/iv_hd"
                style="@style/setting_imageview" />
        </RelativeLayout>

        <View
            style="@style/setting_view"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_sd"
            style="@style/setting_layout"
            android:visibility="gone">

            <TextView
                style="@style/setting_textview_s"
                android:text="标清" />

            <ImageView
                android:id="@+id/iv_sd"
                style="@style/setting_imageview" />
        </RelativeLayout>

        <TextView
            style="@style/setting_textview"
            android:text="观看权限"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_public"
                style="@style/setting_layout">

                <TextView
                    style="@style/setting_textview_s"
                    android:text="公开" />

                <ImageView
                    android:id="@+id/iv_public"
                    style="@style/setting_imageview" />
            </RelativeLayout>

            <View style="@style/setting_view" />

            <RelativeLayout
                android:id="@+id/rl_password"
                style="@style/setting_layout">

                <TextView
                    style="@style/setting_textview_s"
                    android:text="密码观看" />

                <ImageView
                    android:id="@+id/iv_password"
                    style="@style/setting_imageview" />
            </RelativeLayout>

            <View style="@style/setting_view" />

            <RelativeLayout
                android:id="@+id/rl_pay"
                style="@style/setting_layout">

                <TextView
                    style="@style/setting_textview_s"
                    android:text="付费观看" />

                <ImageView
                    android:id="@+id/iv_pay"
                    style="@style/setting_imageview" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_v_height"
            android:background="@color/gray_share"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_marginleft"
                android:layout_marginRight="@dimen/setting_marginleft"
                android:paddingTop="@dimen/setting_paddingtop_s"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_wechat"
                    style="@style/setting_imageview_s"
                    android:src="@drawable/polyv_setting_iv_selected_wechat" />

                <ImageView
                    android:id="@+id/iv_moments"
                    style="@style/setting_imageview_s"
                    android:src="@drawable/polyv_setting_iv_selected_moments" />

                <ImageView
                    android:id="@+id/iv_weibo"
                    style="@style/setting_imageview_s"
                    android:src="@drawable/polyv_setting_iv_selected_weibo" />

                <ImageView
                    android:id="@+id/iv_qq"
                    style="@style/setting_imageview_s"
                    android:src="@drawable/polyv_setting_iv_selected_qq" />

                <ImageView
                    android:id="@+id/iv_qzone"
                    style="@style/setting_imageview_s"
                    android:src="@drawable/polyv_setting_iv_selected_qzone" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_start"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_bt_height"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/polyv_setting_bt_pressed"
                android:gravity="center"
                android:text="开始直播"
                android:textSize="@dimen/setting_tv_textsize" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>
